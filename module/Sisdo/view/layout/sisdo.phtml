<script>
    function showMessages(text, type) {

        if (type == undefined) {
            type = 'info';
        }
        $.notify({message: text}, {type: type, z_index: 2050});
    }

    function jsonResult(result) {
        if (result.status) {
            showMessages(result.message.message, result.message.status)
        } else {
            showMessages(result.error, 'danger');
            return false;
        }
    }

    $(function(){

        $('#srch-term').autocomplete({

            minLength: 1,
            source: function (request, response) {

                var DTO = { "term": request.term };
                sisdoAjax('/instituicao/getInstituctionAutoComplete','GET',DTO,
                    function (data) {

                        var instituicoes = [];
                        $.each( data, function( key, value ) {
                            instituicoes.push(value);
                        });
                        return response(instituicoes);
                    }
                ,null,{global:false});
            }
        });
    });

</script>

