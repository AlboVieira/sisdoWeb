    function showMessages(text, type) {

        if (type == undefined) {
            type = 'info';
        }
        $.notify({message: text}, {type: type, z_index: 2050});
    }

    function jsonResult(result) {
        if (result.status) {
            showMessages(result.message.message, result.message.status)
        } else {
            showMessages(result.error, 'danger');
            return false;
        }
    }

</script>

